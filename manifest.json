{
  "name": "Vivid",
  "description": "Taking note on websites",
  "version": "0.3",
  "permissions": [
    "http://*/"
  ],
  "background": {
    "scripts": ["js/jquery-2.1.1.min.js", "js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_title": "Vivid"
  },
  "icons": {
    "16": "image/icon16.png",
    "24": "image/icon24.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "manifest_version": 2
}
